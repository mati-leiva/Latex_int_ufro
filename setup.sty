%* Comandos para integrales


\newcommand{\cambio}[2]{
    \begin{cases}
        #1 \\
        #2
    \end{cases}
}

\newcommand{\casillaCambio}[3]{
    \begin{minipage}{0.4\linewidth}
        \cambio{#1}{#2}
    \end{minipage}
    \begin{minipage}{0.5\linewidth}
        $\implies#3$
    \end{minipage}
}


\newcommand{\PorPartes}[4]
{
    \left[
        \begin{alignedat}{2}
            u       &=  #1             \quad & \diff v&= #3\\
            \diff u&=  #2             \quad & v &= #4
        \end{alignedat}\,
        \right]
}




